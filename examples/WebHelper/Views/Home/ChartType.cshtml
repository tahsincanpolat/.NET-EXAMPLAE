
@{
    Layout = null;
}

<!DOCTYPE html>
@using System.Web.Helpers
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chart Type</title>
</head>
<body>
    <div>
        <!--Web Helpers ile Tek veri içeren grafik oluşturacağım-->
        @{
            var grafik = new Chart(width: 500, height: 500);

            grafik.AddTitle("1. Sınıflar Bahar Dönemi Not Ortalaması");

            grafik.AddLegend(title: "Veriler");

            grafik.AddSeries(
                name: "ortalamar",
                chartType:"Doughnut", // Point,Pie,Bubble,Line,spline,Column,Bar,Area,SplineArea,Doughnut -- Default : Column
                xValue: new[] { "BM101", "BM102", "BM103" },
                yValues: new[] { 80, 40, 50 }
            );

   

            grafik.Write(format: "png");

        }

    </div>
</body>
</html>
